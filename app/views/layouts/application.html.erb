<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
     <title>DwcRailsAppTemplate</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body>

      
          <!--<div class="container"> -->
                
              <header class="navbar navbar navbar-inverse">
               <!--<div class="collapse navbar-collapse" id="navbarSupportedContent"> -->
                <div class="container-fluid">
                 <nav class="nav navbar-nav navbar-left">
                   <%= link_to image_tag("mercilogo4.jpg",:size => "150x70"), root_path  %>
                 </nav>
                <ul class="nav navbar-nav navbar-right">
                  <% if customer_signed_in? %>
                        <p>ようこそ、XXXさん</p>
                        <li class="nav-item"><%= link_to "マイページ", customers_my_page_path, class: "btn btn-light nav-link" %></li>
                        <li class="nav-item"><%= link_to "商品一覧", customers_items_path, class: "btn btn-light nav-link" %></li>
                        <li class="nav-item"><%= link_to "カート", customers_cart_items_path, class: "btn btn-light nav-link" %></li>
                        <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-light nav-link",method: :delete %></li>
                      <% elsif admin_signed_in? %>
                        <li><%= link_to "商品一覧", home_about_path, class: "btn btn-light" %></li>
                        <li><%= link_to "会員一覧", home_about_path, class: "btn btn-light" %></li>
                        <li><%= link_to "注文履歴一覧", home_about_path, class: "btn btn-light" %></li>
                        <li><%= link_to "ジャンル一覧", home_about_path, class: "btn btn-light", method: :delete %></li>
                        <li><%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-light" ,method: :delete %></li>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>
                    <% else %>
                          <li><%= link_to "About", home_about_path, class: "btn btn-light" %></li>
                          <li><%= link_to "商品一覧",customers_items_path, class: "btn btn-light"%></li>
                          <li><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-light" %></li>
                          <li><%= link_to "ログイン", customer_session_path, class: "btn btn-success " %></li>
                  <% end %>
                  </ul>
                </div>
              </header>
        
            <div class="container">
              <%= yield %>
            </div>
       
    <!--</div>-->
          <footer>
            <div class="bottom">
            </div>
          </footer>
  </body>
</html>
