    <h3>商品詳細</h3>
            <%= form_with(model: @item, url:admins_item_path,method: :patch,local: true) do |f| %>
<div class="row">
        <div class="col-xs-4">
            <%= f.file_field :image_id %>
        </div>
        <div class="col-xs-7">
            <div class="row">
                <div class="col-xs-3">
                    <h4>商品名</h4>
                </div>
                <div class="col-xs-7">
                    <%= f.text_field :name %>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                <h4>商品説明</h4>
                </div>
                <div class="col-xs-7">
                    <%= f.text_field :introduction %>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <h4>ジャンル名</h4>
                </div>
                <div class="col-xs-7">
                    <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
                </div>
           </div>
            <div class="row">
                <div class="col-xs-3">
                    <h4>税抜価格</h4>
                </div>
                <div class="col-xs-7">
                <%= f.text_field :price %>
                </div>
            </div>
                <div class="row">
                <div class="col-xs-3">
                    <h4>販売ステータス</h4>
                </div>
                <div class="col-xs-7">
                    <%= f.select :is_active,{'有効': true, '無効': false}, {include_blank: '選択してください'}, class:"col-xs-8",style:"backgroung-color:red;" %>
                    <%#= f.select :sex, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
                </div>
            </div>
        </div>
</div>
            <%= f.submit"変更を保存",class:"btn btn-primary",style:"margin-left:800px;"%>
    <% end %>
    