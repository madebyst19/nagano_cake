<div class="row">
   <h3 style="background-color:gray;display:inline-block">商品編集</h3>
    <%= form_with(model: @item, url:admins_item_path,local: true,method: :patch) do |f| %>
            <%= f.file_field :image_id %>
        
            <div class=field>
                <div class="col-xs-3">
                    <h4>商品名</h4>
                </div>
                <div class="col-xs-9">
                    <%= f.text_field :name %>
                </div>
            </div>
            <div class=field>
                <div class="col-xs-3">
                    <h4>商品説明</h4>
                </div>
                <div class="col-xs-9">
                <%= f.text_field :introduction %>
                    </div>
            </div>
            <div class=field>
                <div class="col-xs-3">
                    <h4>ジャンル名</h4>
                </div>
                <div class="col-xs-9">
                    <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
                </div>
            </div>
            <div class=field>
                <div class="col-xs-3">
                    <h4>税抜価格</h4>
                </div>
                <div class="col-xs-9">
                <%= f.text_field :price %>
                </div>
            </div>
            <div class=field>
                <div class="col-xs-3">
                    <h4>販売ステータス</h4>
                </div>
                <div class="col-xs-9">
                    <%= f.select :is_active, ['有効', '無効'], {}, class:"col-xs-8",style:"backgroung-color:red;" %>
                </div>
            </div>
            <%= f.submit"変更を保存",class:"btn btn-primary",style:"float:right;"%>
    <% end %>
    
</div>