<h3>商品詳細</h3>
    <div class="row">
        <div class="col-xs-4">
            <td><%= attachment_image_tag @item,:image ,:fill,  60, 60, fallback: "noimage.jpg", size:'100x100'%></td>
        </div>
        <div class="col-xs-7">
            <div class="row">
                    <div class="col-xs-3">
                        商品名&nbsp;&nbsp;
                    </div>
                    <div class="col-xs-7">
                    <%= @item.name %>
                    </div>
            </div>
            <div class="row">
                    <div class="col-xs-3">
                        商品説明&nbsp;&nbsp;
                    </div>
                    <div class="col-xs-7">
                        <%= @item.introduction %>
                    </div>
            </div>
            <div class="row">
                    <div class="col-xs-3">
                        ジャンル名&nbsp;&nbsp;
                    </div>
                    <div class="col-xs-7">
                        <%= @item.genre.name %>
                    </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    税込価格(税抜価格)&nbsp;&nbsp;
                </div>
                <div class="col-xs-7">
                    <%= (@item.price * $tax).round  %>
                    (<%= @item.price %>)円
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    販売ステータス&nbsp;&nbsp;
                </div>
                <div class="col-xs-7">
                    <% if @item.is_active == YAML.load("true")%>
                            販売中
                            <% else  %>
                            停止
                            <% end %>
                </div>
            </div>
        </div>
</div>
        <%= link_to "編集する", edit_admins_item_path,class:"btn btn-primary",style:"float:right;" %>