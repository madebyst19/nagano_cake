<div class="row">
        <h3>商品新規登録</h3>
        <%= form_with(model: @item, url:admins_items_path,local: true,method: :post) do |f| %>
            <div class="col-xs-4">
              <%= f.attachment_field :image %>
            </div>
            <div class="col-xs-8">
                <h4>商品名</h4>
                    <%= f.text_field :name %>
                <h4>商品説明</h4>
                    <%= f.text_field :introduction %>
                <h4>ジャンル名</h4>
                    <%= f.collection_select(:genre_id, @genres, :id, :name ,prompt: "選択してください") %>
                <h4>税抜価格</h4>
                    <%= f.text_field :price %>
                <h4>販売ステータス</h4>
                    <%= f.select :is_active, ['有効', '無効'], {include_blank: 'ーー選択してくださいーー'}, class: 'sample' %>
              <br>
              <%= f.submit"新規登録",class:"btn btn-primary",style:"float:right;"%>
         </div>
    <% end %>
</div>