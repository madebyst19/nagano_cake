<div class="row">
    <h3>商品新規登録</h3>
        <div class="col-xs-3">
            <% form_for(@item) do |f|%>
                <%= f.file_field :image_id%>
            <% end%>
        </div>
        <div class="col-xs-7">
            <% form_for(@item) do |f|%>
                <h4>商品名</h4>
                <%= f.text_field :name %>
                <h4>商品説明</h4>
                    <%= f.text_field :introduction %>
                <h4>ジャンル名</h4>
                    <%= f.select :name, ['sample1', 'sample2', 'sample3'], {include_blank: '選択ボックス'}, class: 'sample' %>
                <h4>税抜価格</h4>
                    <%= f.text_field :price %>
                <h4>販売ステータス</h4>
                    <%= f.select :name, ['有効', '無効'], {include_blank: '選択ボックス'}, class: 'sample' %>
             <% end%>
        </div>
        <div class="col-xs-2">
        <%= link_to "新規登録", admins_item_path,method: :patch%>
        </div>
</div>