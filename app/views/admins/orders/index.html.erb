<h3 >注文履歴一覧</h3>
<table class="table table-hover table-inverse">
    <tr style="background-color:lightgray">
      <th>購入日時</th><th>購入者</th><th>注文個数</th><th>注文ステータス</th>
    </tr>
    <tbody>
        <% @orders.each do |order|%>
                  <% amount_sum = 0%>
                    <td><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S")%></td>
                    <%#= customerの名前を使いたい %>
                    <%#= customer.first_name コントローラーにローカル引数で　Customer.find(order_id: order.id) Customer.find(last_name: "田中") %>
                    <td><%= link_to (order.customer.first_name + order.customer.last_name),edit_admins_order_detail_path(order) %></td>

                    <% order.order_details.each do |order_detail|  %>
                        <% amount = order_detail.amount  %>
                        <% amount_sum = amount_sum + amount  %>
                    <% end %>
                    <td><%= amount_sum %></td>
                    <td><%= order.status %></td>
                </tr>
        <% end %>

    </tbody>

</table>
