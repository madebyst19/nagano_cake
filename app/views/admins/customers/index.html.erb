<h3 style="background-color:gray;display:inline-block">会員一覧</h3>
<table class="table table-hover table-inverse">
    <tr>
      <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
    </tr>
    <tbody>
        <% @customers.each do |customer|%>
                <tr onclick='window.location="<%= '/admins/customers/' + customer.id.to_s %>"' role="link">
                    <td><%= customer.id %></td>
                    <td><%= (customer.first_name) + (customer.last_name) %></td>
                    <td><%= customer.email %></td>
                    <td>
                          <% if customer.is_deleted == YAML.load("true")%>
                            有効
                          <% else  %>
                            退会済
                          <% end %>
                         </td>
                </tr>
        <% end %>
    </tbody>

</table>

