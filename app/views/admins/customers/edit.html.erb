<%= form_with(model: @customer, url:admins_customer_path,local: true,method: :patch) do |f| %>
    <div class="row">
    <h3 style="background-color:gray;display:inline-block"><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h3>
        <div class="field">
            <div class=" col-xs-4">
                <h4>会員ID</h4>
            </div>
            <div class="col-xs-8">
                <%= @customer.id %>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>氏名</h4>
            </div>
            <div class="col-xs-8">
                <p><%= f.text_field :first_name %>
                &ensp;
                <%= f.text_field :last_name %></p>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>フリガナ</h4>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :first_name_kana %>
                &ensp;
                <%= f.text_field :last_name_kana %>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>郵便番号</h4>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :postal_code %>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>住所</h4>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :address %>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>電話番号</h4>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :telephone_number %>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>メールアドレス</h4>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :email %>
            </div>
        </div>
        <div class="field">
            <div class=" col-xs-4">
                <h4>会員ステータス</h4>
            </div>
            <div class="col-xs-8">
                <%= f.radio_button :is_deleted, :"true" %>
                <%= f.label :is_deleted,"有効",{value: :true,style: "display: inline-block;"}%>
                <%= f.radio_button :is_deleted, :"false" %>
                <%= f.label :is_deleted,"退会済み",{value: :false,style: "display: inline-block;"}%>
            </div>
        </div>
</div>
        <%= f.submit"変更を保存する",class:"btn btn-primary"%>
    <% end %>