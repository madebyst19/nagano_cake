<h3 style="background-color:gray;display:inline-block">ジャンル一覧</h3>
  <%= form_with(model: @genre, url:admins_genres_path,local: true,method: :post) do |f| %>
    <%= f.text_field:name %>
        <%= f.radio_button :is_active, :"true" %>
        <%= f.label :is_active,"有効",{value: :true,style: "display: inline-block;"}%>
        <%= f.radio_button :is_active, :"false" %>
        <%= f.label :is_active,"無効",{value: :false,style: "display: inline-block;"}%>
        <%= f.submit "追加",class:"btn btn-primary"%>
    <% end %>
    <br>
  <table class="table table-hover table-inverse">
    <tr>
      <th>ジャンル</th><th>状態</th><th></th>
    </tr>
    <% @genres.each do |genre|%>
      <tr>
        <th><%= genre.name%></th>
        <th>
            <% if genre.is_active == YAML.load("true")%>
            有効
            <% else  %>
            無効
            <% end %>
        </th>
        <th><%= button_to "編集する",edit_admins_genre_path(genre),method: :get ,class:"btn btn-primary"%></th>
      </tr>
    <% end %>
</table>


