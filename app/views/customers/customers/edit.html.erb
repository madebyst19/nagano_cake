<%= form_with(model: @customer, url:customers_customers_path, local: true,method: :patch) do |f| %>
    <h3 style="background-color:gray;display:inline-block; margin-left:100px;">登録情報編集</h3>
        <div class="row">
            <div class="field">
                <div class=" col-xs-4">
                    <%= f.label :"氏名" %>
                </div>
                <div class="name_box">
                  <div class="col-xs-8">
                    <%= f.label  :"姓" %>
                    <%= f.text_field :first_name , autofocus: true, autocomplete: "first_name",style:"margin-left:15px;" %>
                    <%= f.label  :"名" %>
                    <%= f.text_field :last_name , autofocus: true, autocomplete: "last_name",style:"margin-left:15px;" %>
                  </div>
                </div>
            </div>
          </div>
            <div class="row">
              <div class="field">
                <div class=" col-xs-4">
                   <%= f.label :"フリガナ" %>
                </div>
                <div class="col-xs-8">
                  <%= f.label  :"セイ" %>
                  <%= f.text_field :first_name_kana , autofocus: true, autocomplete: "first_name" %>
                  <%= f.label  :"メイ" %>
                  <%= f.text_field :last_name_kana , autofocus: true, autocomplete: "last_name" %>
                </div>
              </div>
            </div>
          <div class="row">
            <div class="field">
              <div class=" col-xs-4">
                <%= f.label :"メールアドレス" %>
                </div>
                <div></div>
                <div class="col-xs-8">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",style:"margin-left:30px;" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="field">
              <div class=" col-xs-4">
                <%= f.label :"郵便番号(ハイフンなし)" %>
              </div>
              <div class="col-xs-8">
                  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",style:"margin-left:30px;" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="field">
              <div class="col-xs-4">
                <%= f.label :"住所" %>
              </div>
              <div class="col-xs-8">
                <%= f.text_field :address, autofocus: true, :size=>"48", autocomplete: "address" ,style:"margin-left:30px;"%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="field">
              <div class=" col-xs-4">
                <%= f.label :"電話番号" %>
              </div>
              <div class="col-xs-8 ">
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" ,style:"margin-left:30px;"%>
              </div>
            </div>
          </div>
          <div class="row"> 
            <div class="field">
              <div class=" col-xs-4">
                <%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                  <em>（<%= @minimum_password_length %>文字以上）</em>
                <% end %><br />
              </div>
              <div class="col-xs-8">
                <%= f.password_field :password, autocomplete: "new-password",style:"margin-left:30px;" %>
              </div>
            </div>
          </div>
        <div class="row">
          <div class="field">
            <div class=" col-xs-4">
              <%= f.label :"パスワード（確認用）" %>
            </div>
            <div class="col-xs-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" ,style:"margin-left:30px;"%>
            </div>
          </div>
        </div>
            <%= f.hidden_field :encrypted_password, value: current_customer.encrypted_password %>
            <%= f.hidden_field :reset_password_token, value: current_customer.reset_password_token %>
         <br>
        <div class="actions">
            <%= f.submit "編集内容を保存する",class:"btn  btn-primary",style:"margin-left:100px;" %>
            <%= link_to "退会する",customers_customers_unsubscribe_path,class:"btn  btn-danger",style:"margin-left:50px;"  %>

        </div>
    <% end %>
</div>