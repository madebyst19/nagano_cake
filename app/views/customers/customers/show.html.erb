<div class="row">
    <h3 style="background-color:gray;display:inline-block">マイページ</h3>
    <br>
    <div class="button-top">
        <h4>登録情報</h4>
            <%= button_to "編集する",edit_customers_customers_path ,class:"btn btn-primary",method: :get  ,style:"margin-left:10px;"%>
            <%= button_to "パスワードを変更する",edit_customers_customers_path ,class:"btn btn-primary" ,style:"margin-left:10px;"%>
    </div>
    <div class="clearfix mypage">
        <table border="2">
            <tr>
                <th style="background-color:lightgray">氏名</th>
                <%#= (@customer.first_name) + (@customer.last_name) %>
                <td><%= (current_customer.first_name) + (current_customer.last_name) %></td>
            </tr>
                <tr>
                <th style="background-color:lightgray">カナ</th>
                <td><%= (current_customer.first_name_kana) + (current_customer.last_name_kana)%></td>
            </tr>
                <tr>
                <th style="background-color:lightgray">郵便番号</th>
                <td><%= current_customer.postal_code %></td>
            </tr>
                <tr>
                <th style="background-color:lightgray">住所</th>
                <td><%=current_customer.address %></td>
            </tr>
                <tr>
                <th style="background-color:lightgray">電話番号</th>
                <td><%=current_customer.telephone_number  %></td>
            </tr>
                <tr>
                <th style="background-color:lightgray">メールアドレス</th>
                <td><%=current_customer.email  %></td>
            </tr>
        </table>
    </div>
            <div class="bottom-wrapper",style="margin:10px;">
                <h4 >配送先</h4>
                <%= button_to "一覧をみる",customers_addresses_path ,class:"btn btn-primary",method: :get ,style:"margin-left:15px;"%>
            </div>
            <div class="bottom-wrapper">
                    <h4 >注文履歴</h4>
                  <%= button_to "一覧をみる",customers_orders_path ,class:"btn btn-primary",style:"display:inline-block;"%>
            </div>
        
</div>

       

