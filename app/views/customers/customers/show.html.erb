<div class="row">
    <h3 style="background-color:gray;display:inline-block">マイページ</h3>
    <br>
    <div class="button-top">
        <h4>登録情報</h4>
            <%= button_to "編集する",edit_customers_customers_path ,style:"display:inline-block;",class:"btn btn-primary",method: :get %>
            <%= button_to "パスワードを変更する",edit_customers_customers_path,style:"display:inline-block;" ,class:"btn btn-primary"%>
    </div>
    <table border="2">
        <tr>
            <td>氏名</td>
            <%= (@customer.first_name) + (@customer.last_name) %>
            <td><%= (current_customer.first_name) + (current_customer.last_name) %></td>
        </tr>
            <tr>
            <td>カナ</td>
            <td><%= (current_customer.first_name_kana) + (current_customer.last_name_kana)%></td>
        </tr>
            <tr>
            <td>郵便番号</td>
            <td><%= current_customer.postal_code %></td>
        </tr>
            <tr>
            <td>住所</td>
            <td><%=current_customer.address %></td>
        </tr>
            <tr>
            <td>電話番号</td>
            <td><%=current_customer.telephone_number  %></td>
        </tr>
            <tr>
            <td>メールアドレス</td>
            <td><%=current_customer.email  %></td>
            
        </tr>
    </table>
        <div class="index">
            <h3 >配送先</h3>
            <%= button_to "一覧をみる",customers_addresses_path ,class:"btn btn-primary",method: :get%>
            <h3 >注文履歴</h3>
            <%= button_to "一覧をみる",customers_orders_path ,class:"btn btn-primary",style:"display:inline-block;"%>
        </div>
</div>

       
