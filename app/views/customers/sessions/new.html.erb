
<h2 style="background-color:gray;display:inline-block">会員の方はこちらからログイン</h2>

<%= form_for(resource, as: resource_name, url: customer_session_path) do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<br>
<div class="not-register">
<h2 style="background-color:gray;display:inline-block">登録がお済みではない方</h2>
<br>
<%= link_to"こちら",new_customer_registration_path%><span>から新規登録を行なってください</span>
</div>
</div>