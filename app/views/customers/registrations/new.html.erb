<div class="row">
    <%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <h3 style="background-color:gray;display:inline-block">新規会員登録</h3>
          <div class="field">
                <div class=" col-xs-4">
                    <h4>氏名</h4>
                </div>
                <div class="col-xs-8">
                <div></div>
                  <%= f.label  :"姓" %>
                  <%= f.text_field :first_name , autofocus: true, autocomplete: "first_name" %>
                  <%= f.label  :"名" %>
                  <%= f.text_field :last_name , autofocus: true, autocomplete: "last_name" %>
                </div>
          </div>

          <div class="field">
                <div class=" col-xs-4">
                    <h4>フリガナ</h4>
                </div>
                <div class="col-xs-8">
                  <%= f.label  :"セイ" %>
                  <%= f.text_field :first_name_kana , autofocus: true, autocomplete: "first_name" %>
                  <%= f.label  :"メイ" %>
                  <%= f.text_field :last_name_kana , autofocus: true, autocomplete: "last_name" %>
                </div>
          </div>

          <div class="field">
            <div class=" col-xs-4">
              <%= f.label :"メールアドレス" %>
              </div>
              <div class="col-xs-8">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
          </div>

          <div class="field">
            <div class=" col-xs-4">
              <%= f.label :"郵便番号(ハイフンなし)" %>
            </div>
            <div class="col-xs-8">
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </div>

          <div class="field">
            <div class="col-xs-4">
              <%= f.label :"住所" %>
            </div>
            <div class="col-xs-8">
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>
          </div>

        <div class="field">
          <div class=" col-xs-4">
            <%= f.label :"電話番号" %>
          </div>
          <div class="col-xs-8">
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
          </div>
        </div>
        
          <div class="field">
            <div class=" col-xs-4">
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
                <em>（<%= @minimum_password_length %>文字以上）</em>
              <% end %><br />
            </div>
            <div class="col-xs-8">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>

      <div class="field">
        <div class=" col-xs-4">
          <%= f.label :"パスワード（確認用）" %>
        </div>
        <div class="col-xs-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <br>
        <center>
          <div class="actions">
            <%= f.submit "新規登録",class:"btn  btn-success"  %>
          </div>
        </center>
    <% end %>

    　<div class="login_view">
        <h2 style="background-color:gray;display:inline-block">既に登録済みの方</h2>
        <br>
        <%= link_to"こちら",new_customer_session_path%><span>からログインしてください</span>
      </div>
    <%# <%= render "customers/shared/links" %> 
  </div>
