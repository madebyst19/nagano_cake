<div class="row">
<div class="col-xs-10">
<h2 style="background-color:gray;display:inline-block">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: customers_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="field">
    <%= f.label  :"名前" %><br />
    <%= f.text_field :last_name , autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
   <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
 <div class="field">
    <%= f.label :"電話番号" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 6文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "新規登録",class:"btn  btn-success"  %>
  </div>
<% end %>

　<div class="login_view">
<h2 style="background-color:gray;display:inline-block">既に登録済みの方</h2>
<br>
<%= link_to"こちら",customers_sign_in_path%><span>からログインしてください</span>
</div>
<%# <%= render "customers/shared/links" %> 
</div>
</div>