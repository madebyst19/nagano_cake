<div class="row">
    <h3 style="background-color:gray;display:inline-block">配送先編集</h3>
    <%= form_with(model: @address,url:customers_address_path,local: true, method: :pacth) do |f| %>
        <tr>
            <th>郵便番号</th>
            <th><%=f.text_field:postal_code , autofocus: true, autocomplete: "postal_code" %></th>
        </tr>
        <tr>
            <th>住所</th>
            <th><%=f.text_field:address , autofocus: true, autocomplete: "address" %></th>
        </tr>
        <tr>
            <th>宛名</th>
            <th><%=f.text_field:name , autofocus: true, autocomplete: "name" %></th>
        </tr>
        <%f.submit "編集する",class:"btn btn-primary"%>
    <% end %>
</div>